@model FileClass

@{
    Layout = null;
}
    
<form asp-controller="Files" asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <hr />
    <button type="submit">Upload</button>
</form>

@if (Model != null)
{
    <hr />
    <table class="table table-bordered table-striped" cellpadding="0" cellspacing="0" border="1">
        <thead>
            <tr>
                <th>SL</th>
                <th>PDf Name</th>
                <th>Display Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var file in Model.Files)
            {
                <tr>
                    <td>@file.FileId</td>
                    <td>@file.Name</td>
                    <td>
                        <a href="../Files/Index/?FileName=@file.Name" style="margin-right:10px;">@file.Name</a>
                        <a href="../Files/PDFViewerNewTab/?FileName=@file.Name" target="_blank">@file.Name</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

}

<br />
<br />
<embed id="embPDF" src="/files/@Model.Name" style="width:100%; height:1000px;">